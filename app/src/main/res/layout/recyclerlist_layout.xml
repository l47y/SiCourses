<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Nombre"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/recyclerlayout_nombre"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"/>
    <TextView
            android:text="Lugar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerlayout_lugar"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerlayout_nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:gravity="center"/>
    <TextView
            android:text="Empresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerlayout_empresa"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerlayout_lugar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerlayout_diez" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerlayout_empresa"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="center"/>
</android.support.constraint.ConstraintLayout>
