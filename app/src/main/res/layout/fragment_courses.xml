<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:fab="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".CoursesFragment">


    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/recyclerView_Courses"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

    <android.support.design.widget.FloatingActionButton
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:clickable="true" android:id="@+id/button_addcourse"
            app:fabSize="normal"
            android:focusable="true" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_showbuttons"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/recyclerView_Courses"/>

    <android.support.design.widget.FloatingActionButton
            app:srcCompat="@drawable/ic_share_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/button_sharecourse"
            android:focusable="true"
            app:fab_size="normal"
            android:visibility="gone"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_addcourse"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/recyclerView_Courses"/>

    <android.support.design.widget.FloatingActionButton
            app:srcCompat="@drawable/ic_trending_up_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/button_chartsinglecourse"
            android:focusable="true"
            app:fab_size="mini"
            android:visibility="gone"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_sharecourse"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/recyclerView_Courses"/>

    <android.support.design.widget.FloatingActionButton
            app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/btn_showbuttons"
            app:layout_constraintEnd_toEndOf="@+id/recyclerView_Courses" android:layout_marginEnd="8dp"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"/>
